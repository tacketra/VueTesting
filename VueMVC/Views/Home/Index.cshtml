@using System.Web.Optimization
@{
  ViewBag.Title = "Home Page";
}

<div id="app" class="row">
    <div class="text-center">

        <div class="top-padding">
            <button
                v-for="tab in tabs"
                v-bind:key="tab"
                v-bind:class="['tab-button', { active: currentTab === tab }]"
                v-bind:title="tab.name"
                v-on:click="currentTab = tab"
            >{{tab.name}}</button>
        </div>

        <div class="text-center">
            <div class="tab" v-model="currentTab">{{currentTab.name || "Home"}}</div>
        </div>

        <div class="block top-bottom-padding">
            <button v-on:click="toggleButton">{{showLabel}}</button>
            <label v-if="show">{{showText}}</label>
        </div>

        <button class="btn btn-primary" v-on:click="toggleModal">{{ buttonText }}</button>
    
        <sweet-modal ref="modal">
            <h3>@ViewBag.Message</h3>
        </sweet-modal>
    </div>
</div>

@section scripts {
  @Scripts.Render("~/Scripts/bundle/home.js")
}